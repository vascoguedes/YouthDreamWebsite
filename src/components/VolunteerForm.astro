<script>
    document.getElementById('myForm')?.addEventListener('submit', async function(event) {
        event.preventDefault(); // Prevent the default form submission behavior

        const formData = { projects : [] };
        const formInputs = event.target.querySelectorAll('input'); // Select all input elements within the form

        formInputs.forEach((input) => {
            if (input.type == 'checkbox' && input.checked) {
                formData['projects'].push({ id: input.name })
            } else {
                formData[input.name] = input.value;
            }
        });

        fetch('https://backoffice.youthdream.pt/api/registerVolunteer', {
            method: 'POST',
            mode: 'no-cors',
            body: JSON.stringify(formData),
        },)
        .then(response => {
            if (response.ok) {
                formInputs.forEach((input) => {
                    if (input.type != 'checkbox') {
                        input.value = ""
                    }
                });
                document.getElementById('sucessMessage').hidden = false;
            } else {
                throw new Error('Server response was not OK');
            }
        })
        .catch(error => {
            // Handle errors
            console.error('Error:', error);

            document.getElementById('errorMessage').hidden = false
        });
    });
  </script>