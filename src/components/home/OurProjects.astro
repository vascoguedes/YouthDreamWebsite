---

const projects = [
  {
    image: "lixonao.jpg",
    title: "Lixo Não",
    href: "http://lixonao.youthdream.pt/"
  },
  {
    image: "nahir.jpg",
    title: "Nahir e os ODS",
    href: "https://nahireosods.youthdream.pt/"
  },
  {
    image: "ondeestaoods.jpg",
    title: "Onde estão os ODS?",
    href: "https://ondeestaoosods.youthdream.pt/"
  },
];

---

<div id="projects" class="bg-white pt-32 pb-12">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Os nossos projetos</h2>
        <p class="mt-2 text-lg leading-8 text-gray-600">Fica a conhecer o nosso trabalho.</p>
      </div>
      
      <div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        {
          projects.map((project) =>
            <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
              <img src={project.image} alt="" class="absolute inset-0 -z-10 h-full w-full object-cover" />
              <div class="absolute inset-0 -z-10 bg-gradient-to-t from-blueLixoNao-dark via-gray-900/40"></div>
              <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
              <h3 class="mt-3 text-lg font-semibold leading-6 text-white">
                <a target="_blank" href={project.href}>
                  <span class="absolute inset-0"></span>
                  {project.title}
                </a>
              </h3>
            </article>
          )
        }
      </div>
    </div>
</div>
  